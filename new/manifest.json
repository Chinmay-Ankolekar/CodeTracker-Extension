{
    "manifest_version": 3,
    "name": "Leetcode Tracker",
    "version": "1.0",
    "host_permissions": [
        "https://leetcode.com/"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "service.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ]
}